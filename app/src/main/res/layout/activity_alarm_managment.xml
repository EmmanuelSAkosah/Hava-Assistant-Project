<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm_management_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#556671"
    tools:context=".AlarmManagmentActivity">
    <LinearLayout
        android:id="@+id/event_reminder_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_reminders_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Event Reminder Options"
            android:textSize="10sp"
            android:textColor="#8ede0f"/>
        <RelativeLayout
            android:id="@+id/reminder_sound_option_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingRight="11dp"
            android:paddingLeft="11dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/reminder_sound_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Sound On"
                android:textColor="#faeff2f4"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/reminder_vibration_option_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingRight="11dp"
            android:paddingLeft="11dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/reminder_vibration_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Vibration On"
                android:textColor="#faeff2f4"/>

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/reminder_snooze_options_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingRight="11dp"
            android:paddingLeft="11dp">

            <TextView
                android:id="@+id/reminder_snooze_time_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_toStartOf="@+id/reminder_snooze_time"
                android:layout_toLeftOf="@+id/reminder_snooze_time"
                android:text="Snooze preference"
                android:textColor="#faeff2f4"/>
            <TextView
                android:id="@+id/reminder_snooze_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:textColor="#faeff2f4"/>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>